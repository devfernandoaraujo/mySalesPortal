@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div classs="card mb-3">
        <div class="fs-1 fw-bold fw-italic card-header text-center">
            <h1>My Sales</h1>
        </div>
    </div>
    <div class="row my-3 justify-content-start">
        <div class="col-8">
            <div class="dropdown col-5">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="dropdownMenuButton1"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Filters
                </button>
                <ul class=" dropdown-menu" aria-labelledby="dropdownMenuButton1">
                    <li><a class="dropdown-item">d</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label for="clientName" class=" float-end text-end col-form-label text-right justify-content-end">Client
                name:</label>
        </div>
        <div class="col">
            <input class="form-control" type="text" placeholder="Client Name" id="clientName">
        </div>
    </div>
    <div class="row">
        <div class="form-check ms-3">
            <input type="checkbox" class="form-check-input" id="filterDate">
            <label class="form-check-label" for="filterDate">Filter between dates</label>
        </div>
    </div>
    <div class="row">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" id="startDate" placeholder="01/01/2022">
            <label class="ps-4" for="startDate">Start Date</label>
        </div>
        <div class="form-floating">
            <input type="text" class="form-control" id="endDate" placeholder="01/01/2022">
            <label class="ps-4" for="endDate">End Date</label>
        </div>
    </div>
    <div class="row">
        <table id="grid-data" class="table table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th data-column-id="id" data-type="numeric" data-identifier="true">Id</th>
                    <th data-column-id="name">Name</th>
                    <th data-column-id="email">Email</th>
                    <th data-column-id="sender">Sender</th>
                    <th data-column-id="purchaseDate" data-order="desc">Purchase Date</th>
                    <th data-column-id="amount" data-order="desc">Amount</th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        $("#grid-data").bootgrid();
    })
</script>
}
